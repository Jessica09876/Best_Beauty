@page
@model Best_Beauty.Pages.Services.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Servicii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Service[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service[0].Durata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service[0].Client.NumeClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service[0].Products)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ServiceD.Services) {
    string selectedRow = "";
    if (item.ID == Model.ProductID)
    {
        selectedRow = "table-success";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.NumeClient)
            </td>
            <td>
                @{
                    foreach (var category in item.Products)
                    {
                        @category.Category.ID @: @category.Category.NumeCategorie <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
